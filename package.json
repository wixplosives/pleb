{
  "name": "pleb",
  "description": "a casual publisher",
  "version": "8.0.0",
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "types": "dist/index.d.ts",
  "bin": {
    "pleb": "bin/pleb.js"
  },
  "scripts": {
    "clean": "node -e \"fs.rmSync('./dist', { recursive: true, force: true })\"",
    "prebuild": "npm run clean",
    "build": "tsc --build",
    "pretest": "npm run lint && npm run build",
    "test": "npm run test:only",
    "test:only": "node --test --enable-source-maps \"dist/test/*.test.js\"",
    "lint": "eslint",
    "prepack": "npm run build",
    "prettify": "prettier . --write"
  },
  "dependencies": {
    "@wixc3/resolve-directory-context": "^5.0.1",
    "colorette": "^2.0.20",
    "commander": "^14.0.0",
    "p-queue": "^8.1.0",
    "promise-assist": "^2.0.1",
    "semver": "^7.7.2"
  },
  "devDependencies": {
    "@types/node": "20",
    "@types/semver": "^7.7.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-no-only-tests": "^3.3.0",
    "prettier": "^3.6.2",
    "type-fest": "^4.41.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.38.0"
  },
  "files": [
    "bin",
    "dist",
    "!dist/test",
    "src",
    "!*/tsconfig.{json,tsbuildinfo}"
  ],
  "engines": {
    "node": ">=20"
  },
  "keywords": [
    "publish",
    "packages",
    "workspace",
    "npm",
    "yarn",
    "ci",
    "automation",
    "upgrade"
  ],
  "publishConfig": {
    "access": "public"
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wixplosives/pleb.git"
  }
}
