{
  "name": "pleb",
  "description": "a casual publisher",
  "version": "3.4.5",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "pleb": "bin/pleb.js"
  },
  "scripts": {
    "clean": "rimraf ./dist",
    "prebuild": "npm run clean",
    "build": "tsc -p tsconfig.build.json",
    "pretest": "npm run typecheck && npm run lint",
    "test": "npm run test:spec",
    "test:spec": "mocha \"./test/**/*.spec.ts\"",
    "lint": "eslint . -f codeframe",
    "prepack": "npm run build",
    "typecheck": "tsc --noEmit",
    "prettify": "npx prettier \"./**/*.{md,js,ts}\" --write"
  },
  "dependencies": {
    "chalk": "^4.1.1",
    "commander": "^8.0.0",
    "find-up": "^5.0.0",
    "glob": "^7.1.7",
    "p-queue": "^6.6.2",
    "promise-assist": "^1.3.0",
    "semver": "^7.3.5",
    "tslib": "^2.3.0",
    "type-fest": "^1.2.2"
  },
  "devDependencies": {
    "@ts-tools/node": "^3.0.1",
    "@types/chai": "^4.2.21",
    "@types/glob": "^7.1.4",
    "@types/mocha": "^8.2.3",
    "@types/node": "12",
    "@types/semver": "^7.3.7",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.4",
    "chai": "^4.3.4",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-no-only-tests": "^2.6.0",
    "mocha": "^9.0.2",
    "rimraf": "^3.0.2",
    "typescript": "~4.3.5"
  },
  "files": [
    "bin",
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=12"
  },
  "keywords": [
    "publish",
    "packages",
    "workspace",
    "npm",
    "yarn",
    "ci",
    "automation",
    "upgrade"
  ],
  "publishConfig": {
    "access": "public"
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true
  },
  "license": "MIT",
  "repository": "git@github.com:wixplosives/pleb.git"
}
